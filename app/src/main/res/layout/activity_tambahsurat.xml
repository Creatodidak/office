<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Suratmasuk">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/white"
        android:paddingBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardView2"
        tools:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/jenisSurat"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/spinnerbg"
                android:padding="10dp"
                android:popupBackground="@drawable/popupbg"
                tools:ignore="SpeakableTextPresentCheck" />

            <EditText
                android:id="@+id/asalSurat"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/inputtextbg"
                android:fontFamily="@font/monsreg"
                android:hint="Pengirim Surat"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="#B0B0B0" />

            <EditText
                android:id="@+id/alamatSurat"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/inputtextbg"
                android:fontFamily="@font/monsreg"
                android:hint="Kepada"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="#B0B0B0" />

            <EditText
                android:id="@+id/noSurat"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/inputtextbg"
                android:fontFamily="@font/monsreg"
                android:hint="Nomor Surat"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="#B0B0B0" />

            <EditText
                android:id="@+id/perihal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/inputtextbg"
                android:fontFamily="@font/monsreg"
                android:hint="Perihal"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="#B0B0B0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tglSuratlb"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Tgl. \n Surat" />

                <EditText
                    android:id="@+id/etTanggalSurat"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/inputtextbg"
                    android:fontFamily="@font/monsreg"
                    android:hint="1"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="#B0B0B0" />

                <Spinner
                    android:id="@+id/spTanggalSurat"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/spinnerbg"
                    android:popupBackground="@drawable/popupbg"
                    tools:ignore="SpeakableTextPresentCheck" />

                <EditText
                    android:id="@+id/etTahunSurat"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/inputtextbg"
                    android:fontFamily="@font/monsreg"
                    android:hint="2022"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="#B0B0B0" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Tgl. \n Diterima" />

                <EditText
                    android:id="@+id/etTanggalSuratDiterima"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/inputtextbg"
                    android:fontFamily="@font/monsreg"
                    android:hint="1"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="#B0B0B0" />

                <Spinner
                    android:id="@+id/spTanggalSuratDiterima"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/spinnerbg"
                    android:popupBackground="@drawable/popupbg"
                    tools:ignore="SpeakableTextPresentCheck" />

                <EditText
                    android:id="@+id/etTahunSuratDiterima"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/inputtextbg"
                    android:fontFamily="@font/monsreg"
                    android:hint="2022"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="#B0B0B0" />
            </LinearLayout>

            <Spinner
                android:id="@+id/sifatSurat"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/spinnerbg"
                android:padding="10dp"
                android:popupBackground="@drawable/popupbg"
                tools:ignore="SpeakableTextPresentCheck" />

            <Spinner
                android:id="@+id/prioritasSurat"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/spinnerbg"
                android:padding="10dp"
                android:popupBackground="@drawable/popupbg"
                tools:ignore="SpeakableTextPresentCheck" />

            <androidx.cardview.widget.CardView
                android:id="@+id/pilihFile"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="15dp"
                app:cardBackgroundColor="@color/transparent"
                app:cardCornerRadius="25dp">

                <TextView
                    android:id="@+id/pickpdf"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/upbg"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="KETUK DISINI UNTUK MEMILIH FILE \n FORMAT PDF"
                    android:textColor="#898989"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnUpload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:padding="10dp"
                android:text="UPLOAD SURAT"
                android:textColor="@color/white"
                app:icon="@drawable/upload"
                app:iconTint="@color/white" />

        </LinearLayout>
    </ScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#039BE5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/monsbold"
            android:padding="10dp"
            android:text="INPUT SURAT MASUK / KELUAR"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>